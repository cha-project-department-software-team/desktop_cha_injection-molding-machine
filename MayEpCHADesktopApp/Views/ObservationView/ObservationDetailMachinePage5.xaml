<UserControl x:Class="MayEpCHADesktopApp.Views.ObservationView.ObservationDetailMachinePage5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:components="clr-namespace:MayEpCHADesktopApp.Resources.Components"

             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Converter="clr-namespace:MayEpCHADesktopApp.Core.ValueConverter;assembly=MayEpCHADesktopApp.Core"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d"
             Height="700"
             Width="1267.2"
             >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <materialDesign:Card Margin="10 10 10 5"
                                         materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <components:MachineInformationDetail
                                MachineName="M4"
                             CycleStandard="{Binding CycleStandar4}"
                             RealCycle="{Binding Cycle4}"
                        CountProduct="{Binding Count4}"
                        ContentBt="{Binding Content4}"
                        StatusBackground="{Binding Status4,Converter={Converter:IntToColorConverter}}"
                            ProductCode="{Binding ProductId4}"
                            MoldCode="{Binding MoldId4}"
                        Mode="{Binding Mode4}"
                        Status="{Binding Status4,Converter={Converter:StringtoStringStatusMachine}}"
                                                    Animation1="{Binding A4}"
                            Animation2="{Binding B4}"
                        DataContext="{Binding DetailMachineViewModel1}">

                    </components:MachineInformationDetail>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Row="1">
                <materialDesign:Card Margin="10 7.5 10 7.5"
                                         materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <components:MachineInformationDetail
                                MachineName="M3"
                      CycleStandard="{Binding CycleStandar3}"
                             RealCycle="{Binding Cycle3}"
                            ProductCode="{Binding ProductId3}"
                            MoldCode="{Binding MoldId3}"
                        ContentBt="{Binding Content3}"
                        Mode="{Binding Mode3}"
                        StatusBackground="{Binding Status3,Converter={Converter:IntToColorConverter}}"
                        CountProduct="{Binding Count3}"
                        Status="{Binding Status3,Converter={Converter:StringtoStringStatusMachine}}"
                                                    Animation1="{Binding A3}"
                            Animation2="{Binding B3}"
                        DataContext="{Binding DetailMachineViewModel2}">

                    </components:MachineInformationDetail>
                </materialDesign:Card>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <materialDesign:Card Margin="10 10 10 5"
                                         materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <components:MachineInformationDetail
                                MachineName="M2"
                          CycleStandard="{Binding CycleStandar2}"
                             RealCycle="{Binding Cycle2}"
                            ProductCode="{Binding ProductId2}"
                            MoldCode="{Binding MoldId2}"
                        CountProduct="{Binding Count2}"
                        StatusBackground="{Binding Status2,Converter={Converter:IntToColorConverter}}"
                        ContentBt="{Binding Content2}"
                        Status="{Binding Status2,Converter={Converter:StringtoStringStatusMachine}}"
                        Mode="{Binding Mode2}"
                                                    Animation1="{Binding A2}"
                            Animation2="{Binding B2}"
                        DataContext="{Binding DetailMachineViewModel3}">

                    </components:MachineInformationDetail>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Row="1">
                <materialDesign:Card Margin="10 7.5 10 7.5"
                                         materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <components:MachineInformationDetail
                                MachineName="M1"
                          CycleStandard="{Binding CycleStandar1}"
                             RealCycle="{Binding Cycle1}"
                                                    Animation1="{Binding A1}"
                            Animation2="{Binding B1}"
                            ProductCode="{Binding ProductId1}"
                        Status="{Binding Status1,Converter={Converter:StringtoStringStatusMachine}}"
                        Mode="{Binding Mode1}"
                        StatusBackground="{Binding Status1,Converter={Converter:IntToColorConverter}}"
                            MoldCode="{Binding MoldId1}"
                        ContentBt="{Binding Content1}"
                        CountProduct="{Binding Count1}"
                        DataContext="{Binding DetailMachineViewModel4}">

                    </components:MachineInformationDetail>
                </materialDesign:Card>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <materialDesign:Card Margin="10 10 10 5"
                                         materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <components:MachineInformationDetail
                                MachineName="L1"
                             CycleStandard="{Binding CycleStandarL1}"
                             RealCycle="{Binding CycleL1}"
                            ProductCode="{Binding ProductIdL1}"
                               Animation1="{Binding AL1}"
                        StatusBackground="{Binding StatusL1,Converter={Converter:IntToColorConverter}}"
                            Animation2="{Binding BL1}"
                            MoldCode="{Binding MoldL1}"
                        Status="{Binding StatusL1,Converter={Converter:StringtoStringStatusMachine}}"
                        Mode="{Binding ModeL1}"
                        ContentBt="{Binding ContentL1}"
                        DataContext="{Binding DetailMachineViewModel5}">

                    </components:MachineInformationDetail>
                </materialDesign:Card>
            </Grid>
            <Grid Grid.Row="1">
                <materialDesign:Card Margin="10 7.5 10 7.5"
                                         materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <components:MachineInformationDetail
                                MachineName="L2"
                              CycleStandard="{Binding CycleStandarL2}"
                             RealCycle="{Binding CycleL2}"
                        ContentBt="{Binding ContentL2}"
                        Mode="{Binding ModeL2}"
                                                    Animation1="{Binding AL2}"
                            Animation2="{Binding BL2}"
                        Status="{Binding StatusL2,Converter={Converter:StringtoStringStatusMachine}}"
                            ProductCode="{Binding ProductIdL2}"
                            MoldCode="{Binding MoldL2}"
                        StatusBackground="{Binding StatusL2,Converter={Converter:IntToColorConverter}}"
                        DataContext="{Binding DetailMachineViewModel6}">

                    </components:MachineInformationDetail>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>

</UserControl>
